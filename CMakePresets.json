{
   "version": 3,
   "configurePresets": [
      {
         "name": "win-msvc",
         "description": "Contains all the common settings that should be used by default for windows builds",
         "generator": "Ninja Multi-Config",
         "binaryDir": "${sourceDir}/builds",
         "installDir": "${sourceDir}/builds/install",
         "architecture": {
            "value": "x64",
            "strategy": "external"
         },
         "cacheVariables": {
            "CMAKE_CXX_COMPILER": "cl.exe",
            "CMAKE_TOOLCHAIN_FILE": {
               "value": "$env{VCPKG_INSTALLATION_ROOT}/scripts/buildsystems/vcpkg.cmake",
               "type": "FILEPATH"
            },
            "CMAKE_CONFIGURATION_TYPES": "RelWithDebInfo;Debug;Release",
            "ENABLE_UNIT_TESTS": "ON",
            "ENABLE_CPP_CHECK": "ON",
            "ENABLE_CLANG_TIDY": "OFF",
            "VCPKG_TARGET_TRIPLET": "x64-wxwindows-static"
         },
         "condition": {
            "type": "equals",
            "lhs": "${hostSystemName}",
            "rhs": "Windows"
         },
         "vendor": {
            "microsoft.com/VisualStudioSettings/CMake/1.0": {
               "enableMicrosoftCodeAnalysis": false,
               "enableClangTidyCodeAnalysis": true
            }
         }
      },
      {
         "name": "linux-clang",
         "description": "Contains all the common settings that should be used by default for linux (Clang) builds",
         "generator": "Ninja Multi-Config",
         "binaryDir": "${sourceDir}/builds",
         "installDir": "${sourceDir}/builds/install",
         "architecture": {
            "value": "x64",
            "strategy": "external"
         },
         "cacheVariables": {
            "CMAKE_TOOLCHAIN_FILE": {
               "value": "$env{VCPKG_INSTALLATION_ROOT}/scripts/buildsystems/vcpkg.cmake",
               "type": "FILEPATH"
            },
            "CMAKE_CXX_COMPILER": "clang++",
            "ENABLE_UNIT_TESTS": "ON",
            "ENABLE_CPP_CHECK": "ON",
            "ENABLE_CLANG_TIDY": "OFF",
            "VCPKG_TARGET_TRIPLET": "x64-linux-wxwindows"
         },
         "condition": {
            "type": "equals",
            "lhs": "${hostSystemName}",
            "rhs": "Linux"
         },
         "vendor": {
            "microsoft.com/VisualStudioRemoteSettings/CMake/1.0": {
               "sourceDir": "$env{HOME}/.vs/$ms{projectDirName}"
            }
         }
      }
   ],
   "buildPresets": [
      {
         "name": "debug-win",
         "description": "Debug (Windows)",
         "displayName": "Debug",
         "configurePreset": "win-msvc",
         "configuration": "Debug"
      },
      {
         "name": "release-win",
         "description": "Release (Windows)",
         "displayName": "Release",
         "configurePreset": "win-msvc",
         "configuration": "RelWithDebInfo"
      },
      {
         "name": "debug-linux",
         "description": "Linux Debug",
         "displayName": "debug",
         "configurePreset": "linux-clang",
         "configuration": "Debug"
      },
      {
         "name": "release-linux",
         "description": "Linux Release w/symbols",
         "displayName": "release",
         "configurePreset": "linux-clang",
         "configuration": "RelWithDebInfo"
      }
   ],
   "testPresets": [
      {
         "name": "debug-win",
         "displayName": "Tests (Debug)",
         "configurePreset": "win-msvc",
         "configuration": "debug"
      },
      {
         "name": "release-win",
         "displayName": "Tests (Release)",
         "configurePreset": "win-msvc",
         "configuration": "RelWithDebInfo"
      },
      {
         "name": "debug-linux",
         "displayName": "Tests (Debug)",
         "configurePreset": "linux-clang",
         "configuration": "debug"
      },
      {
         "name": "release-linux",
         "displayName": "Tests (Release)",
         "configurePreset": "linux-clang",
         "configuration": "RelWithDebInfo"
      }
   ]
}
